<% layout('/layouts/boilerplate') %>
<h4>This is Your Booking</h4>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 book-content">
    
    <% for(listing of users.bookings) {%>
      <div class="row mt-3 mb-3 book-item">
        <div class=" offset-3">
          <h3><%= listing.title %></h3>
        </div>
        <div class="card  offset-3 show-card">
          <img src="<%=listing.image.url%>" class="card-img-top show-img mb-3" alt="listing pic">
          <div class="card-body">
            <p class="card-text">
              <i>Owned by <%=listing.owner.username%></i> <br>
              <%= listing.description %> <br>
              &#8377; <%= listing.price.toLocaleString("en-IN") %> <br>
              <%= listing.location %> <br>
              <%= listing.country %> 
            </p>
          </div>
          <form action="/book/<%= listing.id %>?_method=Put" method="post">
            <button class="btn edit-btn">Canecl</button>
          </form>
        </div>
      </div>
    <% } %>
  </div>
